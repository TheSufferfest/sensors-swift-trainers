use_frameworks!

target 'SwiftySensorsTrainers iOS' do
    platform :ios, '8.4'
    
    pod 'Signals'
    pod 'SwiftySensors', :git => 'https://github.com/kinetic-fit/sensors-swift'
end

target 'SwiftySensorsTrainers macOS' do
    platform :osx, '10.13'
    
    pod 'Signals'
    pod 'SwiftySensors', :git => 'https://github.com/kinetic-fit/sensors-swift'
end

target 'SwiftySensorsTrainers tvOS' do
    platform :tvos, '11.2'
    
    pod 'Signals'
    pod 'SwiftySensors', :git => 'https://github.com/kinetic-fit/sensors-swift'
end
